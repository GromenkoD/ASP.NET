@model IEnumerable<Blog.Entities.Article>

@{
    ViewBag.Title = "Index";
    int d;
}



<div class="col-xs-12 col-sm-3 col-sm-push-9">
    <p>
        @Html.ActionLink("Create New Article", "Create")
    </p>

</div>



@foreach (var item in Model)
{

    <div class="row row-content">
        <div class="col-xs-12 col-sm-3">
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </div>
        <div class="col-xs-12 col-sm-9">
            <div class="col-xs-12 col-sm-12">
                <h2 class="media-heading">
                    @Html.DisplayFor(modelItem => item.ArticleName)
                </h2>
            </div>
            <div class="col-xs-12 col-sm-12">
                <p style="padding:20px;"></p>
                <p>
                    @Html.DisplayFor(modelItem => item.ArticleSummary)
                </p>
                @{
    d = item.Id;
                }
                <p><a class="btn btn-primary btn-xs" href="/Home/Details/@d" id="btnComment">Details &raquo;</a></p>
            </div>
            </div>





    </div>
}




